header.header
    .header__column
        a.home(href=routes.home)
            i.fab.fa-youtube
            |Yutube
    .header__column
        form(action=routes.search, method="get")
            input(type="text", placeholder="Search by a term...",name = "term")
            button
                <i class="fas fa-search"></i>
    .header__column
        ul
            if !(user)
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Login
            else
                li
                    a(href=routes.videos+routes.upload) Upload
                li
                    a(href=routes.userDetail(user.id)) Profile
                li
                    a(href=routes.logout) Logout