extends layouts/main.pug

block content
    .form-container
        form(action=routes.editVideo(video.id), method = "post")
            input(type="text", placeholder="Title", name="title", value=video.title, required=true)
            textarea(name="description", placeholder="Description", required=true)=video.description
            input(type="submit", value="Edit Video")
        a.form-container__link.form-container__link--delete(href=routes.deleteVideo(video.id)) Delete Video