extends layouts/main.pug
include mixins/videoBlockRecommend

block content
    .videoDetail
        .video
            .video__player
                video(src=`/${video.fileUrl}`, width="200px", height="150px", controls=true/*, autoplay=true, muted 영상 자동재생*/)
            .video__info
                a(href=routes.editVideo(video.id))
                    |Edit Video
                p.video__title=video.title
                span.video__views.light 조회수 #{video.views}회
                |&nbsp;·&nbsp;
                span.video__uploadTime.light #{Date(video.uploadTime).toString().substring(4, 15)}
                p.video__description=video.description
            .video__comments
                if video.comments.length === 1
                    span.video__comments-count 1 comment
                else
                    span.video__comments-count #{video.comments.length} comments
        .recommends
            p.recommends-title 추천 동영상
            each videoRecommended in videosRecommended
                +videoBlockRecommend(videoRecommended)