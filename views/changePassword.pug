extends layouts/main.pug

block content
    .form-container
        form(action=routes.users+routes.changePassword, method="post", onsubmit="checkSubmit()").containPassword
            input(type="password", placeholder="Current Password", name="currentPassword", required=true)
            input(type="text", placeholder="New Password", name="password", required=true)
            input(type="password", placeholder="Verify New Password", name="password2", required=true)
            .verify-password
            input(type="submit", value="Change Password")